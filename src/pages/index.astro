---
import Layout from '../layouts/Layout.astro';

// Редирект на страницу https://web-studio-coral.vercel.app/en/
const redirectUrl = "https://web-studio-coral.vercel.app/en/";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redirecting...</title>
    <!-- Мета-тег для автоматического редиректа -->
    <meta http-equiv="refresh" content={`0;url=${redirectUrl}`} />
    <!-- Для SEO: укажем каноническую ссылку -->
    <link rel="canonical" href={redirectUrl} />
  </head>
  <body>
    <script>
      window.location.href = "https://web-studio-coral.vercel.app/en/";
    </script>
  </body>
</html>