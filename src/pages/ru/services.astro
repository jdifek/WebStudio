---
import Layout from '../../layouts/Layout.astro';

const services = [
  {
    icon: "fa-solid fa-code",
    title: "Веб-разработка",
    description: "Создаем современные, быстрые и масштабируемые веб-приложения с использованием передовых технологий.",
    features: [
      "Адаптивный дизайн",
      "Оптимизация производительности",
      "SEO-friendly архитектура",
      "Интеграция CMS"
    ]
  },
  {
    icon: "fa-solid fa-palette",
    title: "UI/UX Дизайн",
    description: "Разрабатываем интуитивно понятные и привлекательные интерфейсы, которые пользователи полюбят.",
    features: [
      "Пользовательские исследования",
      "Прототипирование",
      "Дизайн-системы",
      "Юзабилити-тестирование"
    ]
  },
  {
    icon: "fa-solid fa-bullhorn",
    title: "Брендинг",
    description: "Создаем уникальные и запоминающиеся бренды, которые выделяются на рынке.",
    features: [
      "Разработка логотипа",
      "Фирменный стиль",
      "Брендбук",
      "Маркетинговые материалы"
    ]
  },
  {
    icon: "fa-solid fa-chart-line",
    title: "SEO Оптимизация",
    description: "Повышаем видимость вашего сайта в поисковых системах и привлекаем целевой трафик.",
    features: [
      "Техническая оптимизация",
      "Контент-стратегия",
      "Линкбилдинг",
      "Аналитика и отчетность"
    ]
  },
  {
    icon: "fa-solid fa-shopping-cart",
    title: "E-commerce Решения",
    description: "Разрабатываем эффективные онлайн-магазины, которые продают.",
    features: [
      "Интеграция платежных систем",
      "Управление товарами",
      "Автоматизация процессов",
      "Аналитика продаж"
    ]
  },
  {
    icon: "fa-solid fa-server",
    title: "Поддержка и Хостинг",
    description: "Обеспечиваем бесперебойную работу вашего сайта и оперативную техническую поддержку.",
    features: [
      "Мониторинг 24/7",
      "Резервное копирование",
      "Обновления безопасности",
      "Техническая поддержка"
    ]
  }
];

const process = [
  {
    number: "01",
    title: "Анализ и планирование",
    description: "Изучаем ваш бизнес, цели и потребности целевой аудитории."
  },
  {
    number: "02",
    title: "Дизайн и прототипирование",
    description: "Создаем прототипы и дизайн-макеты для визуализации проекта."
  },
  {
    number: "03",
    title: "Разработка",
    description: "Воплощаем дизайн в жизнь, используя современные технологии."
  },
  {
    number: "04",
    title: "Тестирование",
    description: "Проводим тщательное тестирование всех функций и оптимизацию."
