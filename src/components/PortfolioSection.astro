---
interface PortfolioItem {
  image: string;
  title: string;
  category: string;
  link: string;
}

interface Props {
  sectionTitle: string;
  sectionSubtitle: string;
  portfolioItems: PortfolioItem[];
  ctaText?: string;
  ctaLink?: string;
}

const { sectionTitle, sectionSubtitle, portfolioItems, ctaText, ctaLink } = Astro.props;
---

<section class="portfolio-section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title" data-aos="fade-up">{sectionTitle}</h2>
      <p class="section-subtitle" data-aos="fade-up" data-aos-delay="100">{sectionSubtitle}</p>
    </div>
    
    <div class="portfolio-grid">
      {portfolioItems.map((item, index) => (
        <a href={item.link} class="portfolio-item" data-aos="fade-up" data-aos-delay={100 + (index * 50)}>
          <div class="portfolio-image">
            <img src={item.image} alt={item.title} loading="lazy" />
          </div>
          <div class="portfolio-overlay">
            <div class="portfolio-content">
              <span class="portfolio-category">{item.category}</span>
              <h3 class="portfolio-title">{item.title}</h3>
              <span class="portfolio-link-text">{ctaText || "View Project"}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    {ctaText && ctaLink && (
      <div class="portfolio-cta">
        <a href={ctaLink} class="button button-outline">{ctaText}</a>
      </div>
    )}
  </div>
</section>

<style>
  .portfolio-section {
    padding: 120px 0;
    background-color: var(--color-white);
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 80px;
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-dark);
  }

  .section-subtitle {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-muted);
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 24px;
    margin-bottom: 60px;
  }

  .portfolio-item {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    aspect-ratio: 16/9;
    display: block;
    text-decoration: none;
  }

  .portfolio-image {
    width: 100%;
    height: 100%;
  }

  .portfolio-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .portfolio-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.2));
    opacity: 0;
    display: flex;
    align-items: flex-end;
    padding: 32px;
    transition: opacity 0.3s ease;
  }

  .portfolio-content {
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  .portfolio-category {
    display: inline-block;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 500;
    color: var(--color-primary-300);
    margin-bottom: 8px;
  }

  .portfolio-title {
    font-size: 1.5rem;
    color: var(--color-white);
    margin-bottom: 16px;
  }

  .portfolio-link-text {
    color: var(--color-white);
    font-weight: 500;
    display: inline-flex;
    align-items: center;
  }

  .portfolio-link-text::after {
    content: "â†’";
    margin-left: 8px;
    transition: transform 0.2s ease;
  }

  .portfolio-item:hover .portfolio-image img {
    transform: scale(1.05);
  }

  .portfolio-item:hover .portfolio-overlay {
    opacity: 1;
  }

  .portfolio-item:hover .portfolio-content {
    transform: translateY(0);
  }

  .portfolio-item:hover .portfolio-link-text::after {
    transform: translateX(4px);
  }

  .portfolio-cta {
    text-align: center;
    margin-top: 40px;
  }

  @media (max-width: 992px) {
    .portfolio-grid {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .portfolio-section {
      padding: 80px 0;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .portfolio-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    }
    
    .portfolio-title {
      font-size: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .portfolio-grid {
      grid-template-columns: 1fr;
    }
  }
</style>